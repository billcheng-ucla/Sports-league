<div id="newEvent-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">New Event</h4>
			</div>
	        <div class="modal-body new-game-modal-body">
					    <%= form_for(@event = Event.new) do |e|%>
				        <div class="container well col-xs-12 small-container">
			            <div class="bold col-xs-12 margin-top-10">
			                Date of Event
			            </div>
			            <div class="col-xs-12 margin-top-5">
			                <%= e.date_field :date, required: true, class: "form-control" %>
			            </div>
			            <div class="bold col-xs-12 margin-top-10">
			                Event Description
			            </div>
			            <div class="col-xs-12 margin-top-5">
			                <%= e.text_area :description,  class: "form-control" %>
			            </div>
			            
			            <div class="col-xs-12 margin-top-10">
			                <%= submit_tag "New Event!", class: "btn btn-primary col-md-12" %>
			            </div>
				        </div>
					    <% end %>
	        </div>
		</div>
        
	</div>
</div>